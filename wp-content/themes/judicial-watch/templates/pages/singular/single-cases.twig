					<a target="_blank" class="social-link" href="https://www.linkedin.com/shareArticle?mini=true&url={{ social.link }}">
						<span class="facebook-social"><img src="/wp-content/themes/judicial-watch/assets/images/linkedin.png"></span>
					</a>
                            <a class="social-link"
                               href="mailto:?subject={{ social.title }}&body={{ social.link }}"><span
                                        class="far fa-envelope-open"></span></a>
                            <a class="social-link" href="javascript:window.print()"><span
                                        class="far fa-print"></span></a>
                        </div>
                    </div>

                    <!-- Mobile: Key Issues -->
                    <div class="mobile-key-issues">
                        <h4>Key Issues</h4>
                        <div class="key-issue">
                            <div class="featured-image"
                                 style="background-image:url('/wp-content/themes/judicial-watch/assets/images/placeholder/placeholder-555x225.png')"></div>
                            <a class="title">Clinton Email Investigation</a>
