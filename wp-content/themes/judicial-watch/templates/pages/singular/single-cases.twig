                            <div class="excerpt">
                                Judicial Watch today released received responses under oath from former Secretary
                                of State Hillary Clinton concerning her email practices.
                            </div>
                        </div>
                    </div>

                    <!-- Related Documents -->
                    {% if relatedDocuments %}
                        <h4 class="related-documents-hdg">Related Documents</h4>
                        <div class="columns is-multiline grid-document-archives is-type-singular has-multiple">
                            {% for relatedDocument in relatedDocuments %}
                                <div class="column is-full">
                                    <div class="component-card-document">
                                        <div class="document-image">
                                            <img src="{{ relatedDocument.thumbnails.thumbnail.src }}"/>
                                        </div>
                                        <div class="is-list-flex">
                                            <div class="is-list-col">
                                                <h4 class="component-title">
                                                    <a href="{{ relatedDocument.link }}">
                                                        {{ relatedDocument.title }}
                                                    </a>
                                                </h4>
                                                <div class="date">{{ relatedDocument.date }}</div>

                                                <div class="columns columns-meta">
                                                    <div class="column-dt">Category:</div>
                                                    <div class="column-dd">
                                                        <a href="{{ relatedDocument.category.link }}">{{ relatedDocument.category.name }}</a>
                                                    </div>
                                                </div>

                                                <div class="columns columns-meta">
                                                    <div class="column-dt">Tags:</div>
                                                    <div class="column-dd">
                                                        {% for docTag in relatedDocument.tags %}
                                                            <a href="{{ docTag.link }}">{{ docTag.name }}</a>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <a href="/cases" class="button is-primary m-t-25 m-b-35 button-view-more-docs">View More</a>
                    {% endif %}
                </div>
            </div>
        </section>

        <!-- Sidebar -->
        <section class="column right-sidebar no-printme">
            <!-- Key Issues -->
            <div class="key-issues-list">
                <h4 class="widget-title">Key Issues</h4>
