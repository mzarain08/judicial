					<a target="_blank" class="social-link" href="https://parler.com/#/&url={{ social.link }}">
						<span class="facebook-social"><img src="/wp-content/themes/judicial-watch/assets/images/Parler-Logo.png"></span>
					</a>
					<a target="_blank" class="social-link" href="http://www.reddit.com/submit?url={{ social.link }}">
