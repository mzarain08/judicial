        </section>
    </div>

    <hr/>

    <!-- Section: Related Cases -->
    {% if relatedCases %}
        <section class="section related-posts no-printme">
            <div class="container-1140 p-t-30">
                <h1 class="section-title section-title-primary-bordered">Related Cases</h1>
                <div class="columns slick-slider">
                    {% for relatedCase in relatedCases %}
                        <div class="column">
                            <div class="component-card-post">
                                {% if relatedCase.category.name %}
                                    <div class="category">
                                        <a href="{{ relatedCase.category.link }}">{{ relatedCase.category.name }}</a>
                                    </div>
                                {% endif %}
                                <a href="{{ relatedCase.link }}">
                                    <div class="image{{ relatedCase.thumbnails.medium_large.src ? '' : ' background-image-missing' }}"
                                         style="background-image: url('{{ relatedCase.thumbnails.medium_large.src ?? defaultImage }}')"></div>

                                    <h2 class="title">{{ relatedCase.title }}</h2>
                                </a>
                                <div class="date">{{ relatedCase.date }}</div>
                                <div class="content">{{ relatedCase.content|truncate(50, true) }}</div>
                            </div>
