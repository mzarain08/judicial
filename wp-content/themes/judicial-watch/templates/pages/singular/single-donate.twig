{% extends "default-template.twig" %}

{% block content %}


    <!-- Section: Page Content -->
    <section class="page-content page-container container-750 p-t-50 mobile-p-t-40">
        <div class="wysiwyg-content">
            <div class="responsive-media m-b-30">
                <iframe width="650" height="365.625" src="https://www.youtube.com/embed/wQvQ72uJa6g?controls=0"
                        frameborder="0"
                        allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
        </div>

        <!-- Page Content -->
        <div class="wysiwyg-content">
            {{ page.content }}
        </div>

        <!-- Select Donation Amount -->
        <h2 class="m-t-50 m-b-15 is-block">Select Amount to Donate </h2>
        <div class="columns is-multiline is-grid-20px grid-button-list columns-donate-buttons">


            {% for donateAmount in donateAmounts %}
            <div class="column is-one-third">
                <button type="button" class="button is-primary is-wide is-active" data-amount="{{ donateAmount }}">${{ donateAmount }}</button>
            </div>
            {% endfor %}
        </div>
        <div class="field">
            <input id="monthly-donation-toggle" type="checkbox" class="is-checkradio is-info has-bg-active"/>
            <label for="monthly-donation-toggle" class="checkradio-label is-marginless">
                Make this a monthly donation!
            </label>
        </div>

        <!-- Payment Information -->
        <h2 class="m-t-50">Payment Information</h2>
        <form>
            <div class="columns is-multiline is-gap-10px">
