{% block pageScripts %}
    <script>
        var $donateButtons = $('.columns-donate-buttons .button');
        var donateTotal = 10;
        var $donateAmountLabel = $('.donate-amount');

        $donateButtons.on('click', function() {
            donateTotal = $(this).data('amount');
            $donateAmountLabel.text('$' + donateTotal.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,'));

            $donateButtons.removeClass('is-active');
            $(this).addClass('is-active');
        })
    </script>
{% endblock %}